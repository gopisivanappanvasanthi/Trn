        @*<textarea class="form-control" id="@Model.UserComments" placeholder="<<<leave your comments here... >>>" rows="3"></textarea>*@
    </div>
    <div class="mb-3">
        <label for="@Model.Course" class="form-label">Course</label>
        @Html.TextBoxFor(x => x.Course, new { @class = "form-control" })
        @*<textarea class="form-control" id="@Model.UserComments" placeholder="<<<leave your comments here... >>>" rows="3"></textarea>*@
    </div>
    <div class="mb-3">
        <label for="@Model.PhoneNumber" class="form-label">Phone Number</label>
        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
        @*<textarea class="form-control" id="@Model.UserComments" placeholder="<<<leave your comments here... >>>" rows="3"></textarea>*@
    </div>
    <div class="mb-3">
        <label for="@Model.EmailId" class="form-label">Email Id</label>
        @Html.TextBoxFor(x => x.EmailId, new { @class = "form-control" })
        @*<textarea class="form-control" id="@Model.UserComments" placeholder="<<<leave your comments here... >>>" rows="3"></textarea>*@
    </div>
    <div class="mb-3">
        <label for="@Model.Address" class="form-label">Address</label>
        @Html.TextAreaFor(x => x.Address, new { @class = "form-control" })
        @*<textarea class="form-control" id="@Model.UserComments" placeholder="<<<leave your comments here... >>>" rows="3"></textarea>*@
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
