@model Trn.Feature.Home.Models.Admission

@using (Html.BeginForm())
{
    <div class="mb-3">
        <label for="@Model.FirstName" class="form-label">First Name</label>
        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })

        @*<input type="text" class="form-control" id="@Model.UserName" placeholder="<<<give your name here...>>>">*@
    </div>
    <div class="mb-3">
        <label for="@Model.LastName" class="form-label">Last Name</label>
        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
        @*<input type="email" class="form-control" id="@Model.UserEmailId" placeholder="<<<give your email id here... >>>">*@
    </div>
    <div class="mb-3">

        <label for="@Model.DateofBirth" class="form-label">Date of Birth</label>

       
